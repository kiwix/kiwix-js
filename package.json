{
  "name": "kiwix-js",
  "productName": "Kiwix JS",
  "version": "4.3.1",
  "description": "Kiwix is an offline reader for content from Wikipedia, TED Talks, Stackexchange, and many other sources.",
  "type": "module",
  "scripts": {
    "serve": "vite",
    "preview": "del-cli dist && npm run build-src && vite preview",
    "prebuild": "del-cli dist",
    "build": "rollup --config --file dist/www/js/bundle.js && rollup --config --file dist/www/js/bundle.min.js --environment BUILD:production",
    "prebuild-min": "del-cli dist",
    "build-min": "rollup --config --file dist/www/js/bundle.min.js --environment BUILD:production",
    "prebuild-src": "del-cli dist",
    "build-src": "rollup --config --file dist/www/js/bundle.js",
    "del-dist": "del-cli dist",
    "test": "mocha",
    "test-unit": "mocha",
    "test-unit-coverage": "nyc --experimental-modules --node-option experimental-specifier-resolution=node mocha --require @babel/register --require tests/unit/setup.js 'tests/unit/spec/**/*.test.js'",
    "web-server": "http-server -p 8080 .",
    "test-e2e": "npm run test-e2e-firefox && npm run test-e2e-chrome && npm run test-e2e-edge && npm run test-e2e-iemode",
    "test-e2e-firefox": "node tests/e2e/start-server-and-run-tests.js \"npx mocha --no-config ./tests/e2e/runners/firefox/firefox.e2e.runner.js\"",
    "test-e2e-chrome": "node tests/e2e/start-server-and-run-tests.js \"npx mocha --no-config ./tests/e2e/runners/chrome/chromium.e2e.runner.js\"",
    "test-e2e-edge": "node tests/e2e/start-server-and-run-tests.js \"npx mocha --no-config ./tests/e2e/runners/edge/microsoftEdge.e2e.runner.js\"",
    "test-e2e-iemode": "node tests/e2e/start-server-and-run-tests.js \"npx mocha --no-config ./tests/e2e/runners/edge/ieMode.e2e.runner.js\""
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.9.0",
    "@types/fs-extra": "^9.0.11",
    "bootstrap": "^4.6.2",
    "core-js": "3.30.2",
    "jquery": "^3.7.0",
    "xhr2": "^0.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/register": "^7.25.9",
    "@eslint/js": "^9.23.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitejs/plugin-legacy": "^6.0.2",
    "babel-plugin-polyfill-corejs3": "^0.7.1",
    "chai": "^6.2.0",
    "del-cli": "^5.0.0",
    "eslint": "^9.23.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "globals": "^16.0.0",
    "http-server": "^14.1.1",
    "jsdom": "^25.0.1",
    "mocha": "^11.7.4",
    "nyc": "^17.1.0",
    "rollup": "^4.5.0",
    "rollup-plugin-copy": "^3.4.0",
    "selenium-webdriver": "^4.37.0",
    "sinon": "^19.0.2",
    "vite": "^6.4.1"
  }
}
